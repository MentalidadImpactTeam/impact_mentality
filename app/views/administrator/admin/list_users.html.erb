


<div class="administrador_contenedor_tabla_user animated fadeInDown container-fluid">
        <div class="row">

 <center>
            <div class=" col-12 jugadores_controlador">
                <div class="contenedor_acciones_controlador_jugadores">
                    <i class="back_arrow_jugadores fas fa-arrow-alt-circle-left"></i>
                    <i class="foward_arrow_jugadores  fas fa-arrow-alt-circle-right"></i>
                    <input id="filtro_jugadores" placeholder="Buscar" type="text">
                    <i class="fas fa-search"></i>
                    <%= link_to administrator_users_new_path do %>
                        <i class="fas fa-plus-circle"></i>
                    <% end %>

                </div>
            </div>
 </center>

        </div>

    <div class="row">
        <div class="col-12">
            <center>
                <div class="contenedor_tabla_jugadores">
                    <table id="admin_tabla_usuarios">
                        <thead>
                            <tr>
                                <th class="aliniar_contenido_tabla">ID</th>
                                <th class="aliniar_contenido_tabla">USUARIO</th>
                                <th class="columna_eliminada aliniar_contenido_tabla">PRÓXIMA <br> FECHA DE PAGO</th>
                                <th class="aliniar_contenido_tabla">ÚLTIMO <br> PAGO</th>
                                <th class="aliniar_contenido_tabla">ESTADO</th>
                                <th class="aliniar_contenido_tabla">USUARIO/ <br> ENTRENADOR</th>
                                <th class="aliniar_contenido_tabla">AJUSTES</th>
                                <th class="aliniar_contenido_tabla">ACTIVO <br> INACTIVO</th>

                            </tr>
                        </thead>

                        <tbody>
                            <% @user.each do |user| %>
                                <tr class="row_hover">
                                    <input type="hidden" class="hidden_id" value="<%= user['id'] %>">
                                    <td>

                                        <p class="aliniar_contenido_tabla id_usuario"><%= user.user_information.uid %></p>
                                    </td>
                                    <td>
                                        <p class="aliniar_contenido_tabla nombre_usuario"><%= user.user_information.name %></p>
                                    </td>

                                    <td class="columna_eliminada aliniar_contenido_tabla fecha_cobro"><%= if user.user_conekta_subscription.present? then user.user_conekta_subscription.last.end_date.strftime("%d/%m/%Y") end %> </td>
                                    <td class="aliniar_contenido_tabla fecha_intro"><%= if user.user_conekta_subscription.present? then user.user_conekta_subscription.last.start_date.strftime("%d/%m/%Y") end %></td>
                                    <td class="aliniar_contenido_tabla estado_usuario <%= if user.active != 0 then "usuario_activo" else "usuario_inactivo" end  %>"><%= lista_estatus(user) %></td>
                                    <td class="aliniar_contenido_tabla iconos_ajustes_tabla_jugadores">
                                    <label class="switch">
                                        <input class= "slider_change_user_type" type="checkbox" <%= if user.user_information.user_type_id == 2 then 'checked' end %> >
                                        <span class="slider round"></span>
                                    </label>
                                    </td>
                                    <td class="aliniar_contenido_tabla iconos_ajustes_tabla_jugadores">
                                        <i title="Cambio de plan" class="fas fa-edit"></i>
                                        <i title="Acceso a dashboard" class="fas fa-chart-line"></i>
                                        <i title="Borrar usuario" class="far fa-times-circle"></i>
                                    </td>

                                    <td class="aliniar_contenido_tabla">
                                        <input id="usuario_activo" class="checkbox_user_active" type="checkbox" <%= if user.active != 0 then 'checked' end %>>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>

                </div>
            </center>
        </div>
    </div>

    </div>