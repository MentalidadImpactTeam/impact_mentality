            <div class="menuH_items" id="menu_usuarios">USUARIOS</div>
        <% end %>
        <%= link_to administrator_exercises_path, style: "text-decoration: none; color: whitec" do %> 
            <div class="menuH_items" id="menu_ejercicios">EJERCICIOS</div>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-item nav-link admin_cerrar d-flex justify-content-center" do %> 
            <p class="align-self-center"> CERRAR SESIÓN </p>
        <% end %>
    </div>
    <!--  END MENU desktop -->
        <div class="sistema_container d-flex flex-column">
        <div class="sistema_contenido d-flex">
          <%= insert_paloma_hook %>
        </div>
        </div>
    <%= yield %>
  </body>

  <script>
    $(document).ready(function(){
      Paloma.start();
