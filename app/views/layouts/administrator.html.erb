  <body>
   <!-- Menu Cellphone -->
    <div class="sistema_mobile_menu">
        <!-- Just an image -->
        <nav class="navbar navbar-light bg-dark">
            <img class="burger_menu_mobile" src="img/hamburger-icon.png" width='25' height="25" alt="">
            <span class="titulo_mobile_header" style="">ADMINISTRADOR</span>
            <a class="navbar-brand" href="#">
                    <img src="img/ImpactMentalityIcon-01.png" width="30" height="30" alt="">
            </a>
            
        </nav>
        <ul id="menu_mobile_desplegado">
            <li>
                <%= link_to image_tag("ImpactMentalityIcon-01", class: "sistema_menu_icono", width: "60px", id: "usuarios" ), administrator_users_path, class: "nav-item nav-link header_link"  %>
                <a href="#" class="nav-item nav-link header_link"> <img class="sistema_menu_icono" id="usuarios" src="img/icon.png">USUARIOS</a>
            </li>
            <li>
                <a href="#" class="nav-item nav-link header_link"> <img class="sistema_menu_icono" id="ejercicios" src="img/icon.png">EJERCICIOS</a>
            </li>
            <li>
                <a href="#" class="nav-item nav-link header_login align-self-center d-flex justify-content-center" id="sistema_cerrar"><p class="align-self-center">CERRAR SESIÓN</p></a>
            </li>
        </ul>
    </div>

    <!-- Menu Cellphone END  -->


