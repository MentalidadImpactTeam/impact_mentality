                                        <i class="fas fa-birthday-cake"></i>
                                        <%= ui_fields.text_field :birth_date, placeholder: 'Fecha Nacimiento', id: 'IP_fecha_nacimiento', class: "textbox-n", onfocus: "(this.type = 'date')" %>
                                    </div>
                                </div>
                            </div>

                            <div class="row ">
                                <div class="DP_input col-lg-6 col-md-6">
