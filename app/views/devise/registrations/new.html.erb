                                    <div class="col-12">
                                        <i class="fas fa-school"></i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h5>Escuelas o Instituciones </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button style="display:none;" id="TU_btn">Seleccionar Tipo</button>
                        </div>
                    </div>
                </center>
            </div>
            <div class="col-lg-3"></div>
        </div>

        <%= f.fields_for :user_information do |ui_fields| %>
            <%= ui_fields.hidden_field :user_type_id, id: "user_type_id" %>
            <div id="div_entrenador_modal" class="animated bounceInRight row" style='display: none'>
                <div class="col-lg-3"></div>
                <div id="ientrenador_modal" class="col-sm-12 col-lg-6">

                    <div id="ientrenador_first_row" class="row">
                        <div class="col-12">
                            <center><i class="fas fa-dumbbell"></i></center>
                        </div>
                        <div class="col-12">
                            <center>
                                <h1 id="TU_titulo" class="animated bounceIn">Contacto de Entrenador</h1>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="ientrenador_input col-lg-12 col-md-12">
                            <div class="ientrenador_input_box_correo_institucion  animated bounceIn">
                                <i class="fas fa-envelope"></i>
                                <input id="ientrenador_correo" type="text" placeholder="Correo de la Institución">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="ientrenador_input col-lg-12 col-md-12">
                            <div class="ientrenador_input_box_contacto_institucion animated bounceIn">
                                <i class="far fa-id-badge"></i>
                                <%= ui_fields.text_field :name, placeholder: 'Nombre de Contacto', id: 'ientrenador_contacto' %>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="ientrenador_input col-lg-12 col-md-12">
                            <div class="ientrenador_input_box_num  animated bounceIn">
                                <i class="fas fa-phone"></i>
                                <%= ui_fields.text_field :phone, placeholder: 'Número de telefono', id: 'ientrenador_telefono', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57;', maxlength: "20" %>
                            </div>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-12 ">
                            <center>
                                <button id="ientrenador_btn" class="animated bounceIn">Continuar</button>
                            </center>
                        </div>
                    </div>

                </div>
                <div class="col-lg-3"></div>
            </div>

            <div id="div_datos_personales" class="animated bounceInRight row" style="display: none">
                <div class="col-lg-3"></div>
                <div id="IP_modal" class="col-sm-12 col-lg-6">
                    <div class="container-fluid">
                        <div style="margin:25px 0;" class="row">
                            <div class="col-12">
                                <center>
                                    <h1 id="IP_titulo" class="animated bounceIn">Información Personal</h1>
                                </center>
                            </div>


                        </div>
                        <div id="FPago_full_container">
                            <div class="row">
                                <div class="DP_input col-lg-12 col-md-12">
                                    <div id="input_box_nombre" class="input_box_tutor  animated bounceIn">
                                        <i class="far fa-id-badge"></i>
                                        <%= ui_fields.text_field :first_name, placeholder: 'Nombres', id: 'IP_nombre' %>
                                    </div>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="DP_input col-lg-12 col-md-12">
                                    <div id="input_box_apellido" class="input_box_tutor animated bounceIn">
                                        <i class="far fa-id-badge"></i>
                                        <%= ui_fields.text_field :last_name, placeholder: 'Apellidos', id: 'IP_apellido' %>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="DP_input col-lg-6 col-md-6">
                                    <div id="input_box_telefono" class="input_box_tutor animated bounceIn">
                                        <i class="fas fa-phone"></i>
                                        <%= ui_fields.text_field :phone, placeholder: 'Teléfono', id: 'IP_telefono', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57;', maxlength: "20" %>
                                    </div>
                                </div>
                                <div class="DP_input col-lg-6 col-md-6">
