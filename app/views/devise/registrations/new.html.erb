<div class="container-fluid">
    <div id="contenedor_registro" class="animated bounceInDown row">
        <div class="col-lg-3"></div>
        <div id="registro_modal" class="col-sm-12 col-lg-6">

            <!-- Cierre de Modal -->
            <i id="registro_close" class="fas fa-times-circle"></i>
            <!-- End Cierre de mdoal -->

            <div style="z-index:-10;" class="col-12">
                <center>
                    <%= image_tag("Logo-01.png", class: "registro_imagen_logo animated bounceInDown" ) %>
                </center>
            </div>
            <div class="col-12">
                <center>
                    <h1 id="registro_titulo" class="animated bounceInDown">REGISTRO</h1>
                    <hr class="animated bounceIn" style="animation-delay:1s;  border:1px solid red; width: 50%;">
                </center>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="input_container animated bounceIn col-lg-12">
                <center>
                    <%= image_tag("User-01.png") %>
                    <%= f.email_field :email, placeholder: "Correo Electrónico" %>
                </center>
              </div>

              <div class="input_container animated bounceIn col-lg-12">
                <center>
                    <%= image_tag("lock.png") %>
                    <%= f.password_field :password, placeholder: "Contraseña" %>
                </center>
            </div>

            <div class="input_container animated bounceIn col-lg-12">
                <center>
                    <%= image_tag("lock.png", style: "opacity:.5;" ) %>
                    <%= f.password_field :password_confirmation, placeholder: "Contraseña" %>
                </center>
            </div>

            <div class="col-12">
                <center><button id="registro_btn" class="animated bounceInDown">REGISTRARME</button></center>
            </div>
            <% end %>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>


<style>
.registro_sweetalert{
    background-color:#b52434 !important;
    border-radius:0px !important;
}
</style>