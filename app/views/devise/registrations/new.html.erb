                                    </div>
                                </div>
                                <div class="DP_input col-lg-6 col-md-6">
                                    <div class="input_box_exp animated bounceIn">
                                        <i class="far fa-calendar-alt"></i>
                                        <%= ui_fields.select :experience, options_for_select([['Experiencia', ''],['Novato', 'novato'],['Experimentado', 'experimentado'], ['Atleta', 'atleta']]), {}, { :id => 'ID_exp' } %>
