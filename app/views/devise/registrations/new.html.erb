                                </div>
                            </div>


                            <div class="row ">
                                <div class="DP_input col-lg-6 col-md-6">
                                    <div id="input_box_peso" class="input_box_tutor animated bounceIn">
                                        <i class="fas fa-weight"></i>
                                        <%= ui_fields.text_field :weight, placeholder: 'Peso', id: 'IP_peso', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57;' %>
                                    </div>
                                </div>
                                <div class="DP_input col-lg-6 col-md-6">
                                    <div id="input_box_estatura" class="input_box_ano animated bounceIn">
                                      <i class="fas fa-ruler-vertical"></i>
                                        <%= ui_fields.select :height, options_for_select(@heights), {}, { :id => 'IP_Estatura' } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 ">
                        <center>
                            <button id="IP_btn" class="animated bounceIn">Continuar</button>
                        </center>
                    </div>
                </div>
                <div class="col-lg-3 "></div>
            </div>

            <div id="div_informacion_deportiva" class="animated bounceInRight row" style='display: none'>
                <div class="col-lg-3"></div>
                <div id="Terminar_modal" class="col-sm-12 col-lg-6">
                    <div class="container-fluid">
                        <div style="margin:25px 0;" class="row">
                            <div class="col-12">
