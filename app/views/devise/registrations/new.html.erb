                            <div id="TU_usuario" class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h5>Soy Atleta Individuales </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div id="TU_entrenador" class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fas fa-chalkboard-teacher"></i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h5>Entrenador Particular </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
