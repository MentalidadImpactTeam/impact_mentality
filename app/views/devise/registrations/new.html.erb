                                    </div>
                                </div>
                                <div class="DP_input col-lg-6 col-md-6">
                                    <div id="input_box_gen" class="input_box_ano animated bounceIn">
                                        <i class="fas fa-transgender"></i>
                                        <%= ui_fields.select :genre, options_for_select([['Género', ''],['Hombre', 'H'],['Mujer', 'M']]), {}, { :id => 'IP_genero' } %>
