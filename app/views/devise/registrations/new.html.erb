                                        <option value="2019">2019</option>
                                        <option value="2020">2020</option>
                                        <option value="2021">2021</option>
                                        <option value="2022">2022</option>
                                        <option value="2023">2023</option>
                                        <option value="2024">2024</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <center>
                        <button id="FPago_btn" class="animated bounceIn">Finalizar</button>
                    </center>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>

        <div id="div_tipo_usuario" class="animated bounceInRight row" style='display: none'>
            <div class="col-lg-3"></div>
            <div id="TU_modal" class="col-sm-12 col-lg-6">
