<div class="contenedor_todo">
<div class='container-fluid'>
  <div class='row'>
    <div class='col-lg-3'>
    </div>

    <div style="background-color:white; box-shadow: 0px 0px 15px #888888;" class='col-lg-6'>
      <center><h2 id="olvidaste_contrasena">¿Olvidaste tu contraseña?</h2></center>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="btn_send_instructions actions">
          <%= f.submit "Enviar Correo electrónico" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>

    <div class='col-lg-3'>
    </div>
  </div>
</div>
</div>
<style>
body, html{
    width:100%;
    height:100%;
}

.contenedor_todo{
  background-image: url('../img/Corriendo2.jpg');
    width:100%;
    height:100%;
    display:flex;
    flex-direction: column;
    justify-content:center;
}
.btn_send_instructions input[type="submit"] {
  background-color:red;
  border:none;
  font-family:lato;
  padding:10px;
  color:white;
  margin-bottom:5vw;
}
#user_email{
  border:1px solid grey;
  margin:0 0 25px 0;
  padding:10px;
}
#olvidaste_contrasena{
  color:red;
  font-weight:bold;
  margin:35px 0;
  font-family:lato;
  font-size:3vw;
  transition:all .5s;
}

@media only screen and (max-width: 1000px) {
 #olvidaste_contrasena{
  font-size:6vw;
}
}
</style>


