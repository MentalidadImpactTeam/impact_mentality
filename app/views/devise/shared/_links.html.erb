<%- if Devise.mappings[:user].registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarme", new_registration_path(:user),:class=> 'links_ventana_login' %><br />
<% end -%>

<%- if Devise.mappings[:user].recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(:user),:class=> 'links_ventana_login' %><br />
<% end -%>

<%- if Devise.mappings[:user].confirmable? && controller_name != 'confirmations' %>
  <%= link_to "No recibiste las instrucciones para confirmación", new_confirmation_path(:user),:class=> 'links_ventana_login' %><br />
<% end -%>

<%- if Devise.mappings[:user].lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:user),:class=> 'links_ventana_login' %><br />
<% end -%>

<%- if Devise.mappings[:user].omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(:user, provider) %><br />
  <% end -%>
<% end -%>
