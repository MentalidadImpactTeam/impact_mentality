<body id="contacto_body">



        <div class="container-fluid">
        <%= render "header_landing" %>

    <!-- CONTENIDO -->
    <div class="titulo_contacto_landing d-flex justify-content-center">
        <div class="align-self-center" id="contacto_rayaroja"></div>
        <div class="align-self-center" id="contacto_titulo"> CONTACTO </div>
        <div class="align-self-center" id="contacto_rayaroja"></div>
    </div>
    <div class="row d-flex justify-content-around">
            <div id="contacto_contenido1">
                <span id="contacto_contenido1_pregunta"> ¿Tienes alguna duda o comentario? </span>
                <span id="contacto_contenido1_callto"> Envíanos un correo por medio de este formulario </span>
                <form>
                    <div class="d-flex contacto_label_container">
                        <img src="">
                        <div>Nombre</div>
                    </div>

                    <div class="d-flex contacto_input_container">
                        <i class="fa fa-user icon"></i>
                        <input class="contacto_input_field" maxlength="30" type="text" id="nombre" name="nombre" placeholder="Escribe tu nombre...">
                    </div>

                    <div class="d-flex contacto_label_container">
                        <img src="">
                        <div>Correo</div>
                    </div>
                    <div class="d-flex contacto_input_container" >
                        <i class="fa fa-at icon"></i>
                        <input class="contacto_input_field"  maxlength="50"  type="text" id="email" name="email" placeholder="Escribe tu correo electrónico...">
                    </div>

                    <div class="d-flex contacto_label_container">
                        <img src="">
                        <div>Asunto</div>
                    </div>
                    <div class="d-flex contacto_input_container" >
                        <i class="fa fa-question icon"></i>
                        <input class="contacto_input_field" maxlength="50" type="text" id="asunto" name="asunto" placeholder="¿Por qué nos quieres contactar? ...">
                    </div>

                    <div class="d-flex contacto_label_container">
                        <img src="">
                        <div>Mensaje</div>
                    </div>
                    <div class="d-flex contacto_input_container" id="contacto_mensaje" >
                        <i class="fa fa-comment icon"></i>
                        <textarea class="contacto_input_field" type="text" id="mensaje" name="mensaje" placeholder="Escríbenos tu mensaje..."></textarea>
                    </div>
                    <button class="header_login contacto_boton" type="submit" id="contacto_enviar"> <p>ENVIAR</p> </button>
                </form>
            </div>
            <div class="" id="contacto_contenido2">
                <span id="contacto_contenido1_pregunta"> ¿Necesitas atención especial? </span>
                <span id="contacto_contenido1_callto"> Contáctanos por los siguientes medios: </span>
                <span class="contacto_contenido2_titulo"> Llámanos </span>
                <div class="contacto_contenido2_info">
                    <img src="img/phoneicon.png"> <span class="contacto_contenido2_infos"> +52 (686) 136 3889 </span>
                </div>
                <span class="contacto_contenido2_titulo"> Mándanos un correo </span>
                <div class="contacto_contenido2_info">
                    <img src="img/mailicon.png"> <span class="contacto_contenido2_infos"> administrador@mentalidadimpact.com </span>
                </div>
            </div>
    </div>




    <!-- FOOTER -->
